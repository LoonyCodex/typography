{
  "private": false,
  "version": "0.0.5",
  "type": "module",
  "main": "semicolon/index.gen.js",
  "module": "semicolon/index.gen.js",
  "types": "semicolon/index.gen.d.ts",
  "typings": "semicolon/index.gen.d.ts",
  "files": [
    "semicolon",
    "src"
  ],
  "directories": {
    "semicolon": "semicolon",
    "src": "src"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "homepage": "http://LoonyCodex.github.io/typography",
  "name": "@LoonyCodex/typography",
  "repository": "git://github.com/LoonyCodex/typography.git",
  "scripts": {
    "ts-types": "tsc --emitDeclarationOnly --outDir package",
    "build": "rimraf lib && rimraf package && npx yarn re:build && node scripts/build.cjs && npm run ts-types",
    "cocaine": "rescript build -w",
    "re:build": "rescript",
    "re:clean": "rescript clean",
    "storybook": "start-storybook -p 6006",
    "storybook:package": "build-storybook",
    "start": "dumi dev",
    "docs:build": "dumi build",
    "docs:deploy": "gh-pages -d docs-dist",
    "father-build": "father-build",
    "deploy": "npm run docs:build && npm run docs:deploy",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage",
    "prepublishOnly": "npm run build",
    "playroom:_cleanup": "rimraf ./.playroom/package",
    "playroom:_build": "npm run build && rimraf ./.playroom/build && shx cp -r ./package ./.playroom/build",
    "playroom": "npm run playroom:_build && playroom start --config ./.playroom/config.cjs",
    "playroom:package": "npm run playroom:_cleanup && npm run playroom:_build && playroom build --config ./.playroom/config.cjs"
  },
  "devDependencies": {
    "@babel/core": "^7.17.2",
    "@rescript/react": "^0.10.3",
    "@storybook/addon-actions": "^6.4.18",
    "@storybook/addon-essentials": "^6.4.18",
    "@storybook/addon-links": "^6.4.18",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.4.18",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.10",
    "@types/react": "^17.0.11",
    "@umijs/fabric": "^2.8.1",
    "@umijs/test": "^3.0.5",
    "@vanilla-extract/babel-plugin": "^1.0.0",
    "@vanilla-extract/css": "^1.1.0",
    "@vanilla-extract/esbuild-plugin": "^2.0.0",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.3",
    "babel-plugin-import": "^1.13.3",
    "dumi": "^1.1.0",
    "esbuild": "^0.12.15",
    "father-build": "^1.17.2",
    "gentype": "^4.3.0",
    "gh-pages": "^3.0.0",
    "html-webpack-plugin": "^5.5.0",
    "lint-staged": "^10.0.7",
    "mini-css-extract-plugin": "^2.4.5",
    "playroom": "^0.27.9",
    "postcss": "^8.4.4",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rescript": "^9.1.3",
    "rescript-classnames": "^6.0.0",
    "shx": "^0.3.4",
    "typescript": "4.5.2",
    "typography": "^0.16.21",
    "yorkie": "^2.0.0"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  }
}
